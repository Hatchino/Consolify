<% var title="Back-office Ajouter un quizz" %>
<%- include('header.ejs', { title: title }) %>

<% if (typeof pseudo !=='undefined' && isAdmin) { %>

    <header>
        <div class="admin-banner flex">
            <div class="btn-back circle-back"><i class="fa-solid fa-arrow-left"></i></div>
            <h2 class="uppercase m-auto ">Administration Consolify</h2>
        </div>
    </header>

    <h1 class="text-align uppercase mb-40 mt-40">Ajouter un quiz</h1>
    
    <form action="/add-quizz" method="POST" enctype="multipart/form-data" id="form-add-quizz">
        <div id="message-error"></div>
        <label for="nom">Nom : <span class="asterisque">*</span></label>
        <input type="text" id="nom" name="nom" required>

        <label for="type">Type : <span class="asterisque">*</span></label>
        <select id="type" name="type" required>
            <option value="front">Front-end</option>
            <option value="back">Back-end</option>
        </select>

        <label for="niveau">Niveau : <span class="asterisque">*</span></label>
        <select id="niveau" name="niveau" required>
            <option value="facile">Facile</option>
            <option value="moyen">Moyen</option>
            <option value="difficile">Difficile</option>
        </select>

        <label for="temps">Temps du quizz (en min) : <span class="asterisque">*</span></label>
        <input type="text" id="temps" name="temps" required>

        <label for="questions">Nombre de questions : <span class="asterisque">*</span></label>
        <input type="text" id="questions" name="questions" required>

        <label for="description">Description : <span class="asterisque">*</span></label>
        <textarea id="description" name="description" required></textarea>

        <label for="image">Image : <span class="asterisque">*</span></label>
        <input type="file" id="image" name="image" accept="image/*" required>

        <label for="icone">Ic√¥ne <span class="asterisque">*</span><i class="fa-solid fa-circle-info" title="Ajouter le contenu de la class de l'icone fontawesome"></i> :</label>
        <input type="text" id="icone" name="icone" placeholder="fa-solid fa-circle-info" required>

        <button type="submit">Ajouter le quiz</button>
    </form>


<% } else { %>
    <script>
        window.location.href = "/";
        </script>
    <% } %>